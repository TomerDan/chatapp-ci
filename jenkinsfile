pipeline {
    agent any
    environment {
        GIT_URL_HTTP = "github.com/TomerDan/portfolio-project.git"
    }

    stages {
//################################BUILD###########################################
        stage('Build') {
            steps {
                script{
                    gv = load "script.groovy"
                    gv.version(
                    gv.build
                    )
                }             
            }
        }
//################################PACKAGE###########################################
        stage('Package') {
            when {
                branch "main/*"
            }
            steps {
                echo 'Package....'
            }
        }
//################################TEST###########################################
        stage('Test') {
            when {
                anyOf {
                    branch "main"
                    branch "release/*"
                }
            }
            steps {
                script{
                    gv.test()
                }

            }
        }
//################################TAG###########################################
        stage('Tag') {
            when {
                branch "main/*"
            }
            steps {
                echo 'Tag....'
            }
        }
//################################PUBLISH###########################################
        stage('Publish') {
            when {
                branch "main/*"
            }
            steps {
                echo 'Publish....'
            }
        }
//################################DEPLOY###########################################
        stage('Deploy') {
            when {
                branch "main/*"
            }
            steps {
                echo 'Deploy....'
            }
        }
//################################CLEAN###########################################
    }
    post{
        always{
            script{
                gv.clean()
            }
        }
    }
}

