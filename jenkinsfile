pipeline {
    agent any
    environment {
        GIT_URL_HTTP = "github.com/TomerDan/chatapp-ci.git"
    }
//###############################INIT###############################################
    stages {
        stage ("init"){
            steps{
                script{
                    gv = load "script.groovy"
                }
            }
        }
//################################BUILD###########################################
        stage('Build') {
            steps {
                script{
                    gv.build()
                }             
            }
        }
//################################TEST###########################################
        stage('Test') {
            when {
                anyOf {
                    branch "main"
                    branch "feature/*"
                }
            }
            steps {
                script{
                    gv.test()
                }

            }
        }
//################################TAG###########################################
        stage('Tag') {
            when {
                branch "main"
            }
            steps {
                script{
                gv.version()
                gv.tag()
                }
                echo 'Tag....'
            }
        }
//################################PUBLISH###########################################
        stage('Publish') {
            when {
                branch "main"
            }
            steps {
                echo 'Publish....'
                script{
                    gv.publish_image()
                }
            }
        }
//################################DEPLOY###########################################
        stage('Deploy') {
            when {
                branch "main"
            }
            steps {
                echo 'Deploy....'
            }
        }
//################################CLEAN###########################################
    }
    post{
        always{
            script{
                gv.clean_docker()
            }
        }
    }
}

