pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'prune docker data'
                sh'''
                docker system prune -a --volumes -f
                '''
                echo 'start container'
                sh'''
                docker build ./app/ -f ./app/Dockerfile -t app
                '''   
                echo 'start container'
                sh'''
                docker-compose up -d
                '''               
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh'''
                docker network connect lab_default app
                curl http://app:8083/
                '''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
    post{
        always{
            sh 'docker compose down'
        }
    }
}

