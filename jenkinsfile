pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'prune docker data'
                sh'''
                docker system prune -a --volumes -f
                '''
                echo 'start container'
                sh'''
                docker build ./app/ -f ./app/Dockerfile -t app
                '''   
                echo 'start container'
                sh'''
                docker-compose up -d
                '''               
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh'curl app:8083'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}

