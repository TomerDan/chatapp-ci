pipeline {
    agent any
    environment {
        GIT_URL_HTTP = "github.com/TomerDan/portfolio-project.git"
    }
//###############################INIT###############################################
    stages {
        stage ("init"){
            steps{
                script{
                    gv = load "script.groovy"
                }
            }
        }
//#############################VERSION###############################################
        stage("version") {
            when { branch "release/*"}
            steps{
                script{
                    gv.build()
                }
            }

        }

//################################CLEAN###########################################
    }
    post{
        always{
            script{
                gv.clean()
            }
        }
    }
}

